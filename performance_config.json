    "testing": {
      "description": "Settings optimized for testing",
      "max_queue_size": 500,
      "memory_limit_mb": 25,
      "enable_debug_logging": false,
      "performance_monitoring": true,
      "strict_performance_targets": true
    },
    "production": {
      "description": "Settings optimized for production",
      "max_queue_size": 20000,
