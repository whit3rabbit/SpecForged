    "max_batch_size": 50,
    "batch_timeout_ms": 1000,
    "debounce_delay_ms": 250,
    "parallel_processing_limit": 3,
    "cache_expiration_ms": 300000,
    "memory_limit_mb": 100,
    "enable_streaming_processing": true,
    "enable_operation_batching": true,
    "enable_performance_monitoring": true,
    "compression_threshold": 100,
    "performance_targets": {
      "max_file_watcher_response_ms": 500,
      "min_batch_efficiency": 0.9,
      "max_memory_usage_mb": 120,
      "min_cache_hit_rate": 0.85,
      "max_operation_processing_ms": 1000
