  },
  "monitoring": {
    "description": "Performance monitoring and alerting configuration",
    "enable_metrics_collection": true,
    "metrics_retention_hours": 24,
    "alert_thresholds": {
      "high_memory_usage_mb": 150,
      "low_throughput_ops_per_sec": 25,
      "high_processing_time_ms": 10000,
      "low_cache_hit_rate": 0.7,
      "high_error_rate": 0.1,
      "queue_size_warning": 5000,
      "queue_size_critical": 8000
    },
    "performance_dashboard": {
      "update_interval_ms": 5000,
      "metrics_to_display": [
        "operations_processed",
        "avg_processing_time_ms",
        "memory_usage_mb",
        "cache_hit_rate",
        "queue_throughput",
        "batch_efficiency",
        "error_rate"
      ]
    }
  },
  "optimization_strategies": {
    "description": "Automatic optimization strategies",
    "auto_cache_cleanup": {
      "enabled": true,
      "trigger_memory_mb": 80,
      "target_memory_mb": 60
    },
    "auto_queue_cleanup": {
      "enabled": true,
      "trigger_queue_size": 7000,
      "target_queue_size": 5000,
      "max_operation_age_hours": 6
    },
    "auto_compression": {
      "enabled": true,
      "trigger_file_size_mb": 5,
      "compression_algorithm": "gzip"
    },
    "dynamic_batching": {
      "enabled": true,
      "min_batch_size": 5,
      "max_batch_size": 100,
      "adaptive_sizing": true
    },
    "intelligent_caching": {
      "enabled": true,
      "cache_hot_operations": true,
      "predictive_caching": false,
      "cache_priority_boost": 1.5
    }
  },
  "environment_specific": {
    "development": {
      "description": "Settings optimized for development",
      "max_queue_size": 1000,
      "memory_limit_mb": 50,
      "enable_debug_logging": true,
      "performance_monitoring": false
