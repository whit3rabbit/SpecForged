  "vscode_extension": {
    "description": "Performance configuration for the VS Code extension",
    "processing_interval_ms": 2000,
    "heartbeat_interval_ms": 30000,
    "cleanup_interval_ms": 1800000,
    "performance_optimization_interval_ms": 300000,
    "max_operation_age_hours": 12,
