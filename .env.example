# SpecForged Docker Environment Configuration
# Copy this file to .env and customize the values

# Server Configuration
SPECFORGED_NAME=SpecForged-Docker
SPECFORGED_PORT=8080
SPECFORGED_LOG_LEVEL=INFO

# Project Configuration
WORKSPACE_PATH=./workspace
# SPECFORGE_PROJECT_ROOT=/workspace (set automatically in container)
# SPECFORGE_BASE_DIR=/workspace/.specifications (set automatically in container)

# Security Settings
SPECFORGED_SECURITY_AUDIT=true
SPECFORGED_RATE_LIMITING=true
SPECFORGED_MAX_REQUESTS=100

# HTTP Settings
SPECFORGED_CORS_ENABLED=true

# Development Settings
SPECFORGED_DEBUG=false

# Nginx Reverse Proxy (if using production profile)
NGINX_PORT=80
NGINX_SSL_PORT=443
SSL_CERTS_PATH=./certs

# Docker Compose Profiles
# Uncomment to enable additional services:
# COMPOSE_PROFILES=production,monitoring